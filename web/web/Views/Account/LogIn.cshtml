@model web.Models.LogInViewModel
@using web.Shared
@{
    ViewBag.Title = "Log In";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/MvcFoolproofJQueryValidation.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/mvcfoolproof.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Log In</legend>
        @if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="validation-summary-errors">
                @Model.ErrorMessage
            </div>
        }
        <div>
            @Html.LabelFor(m => m.Username)
            @Html.ValidationMessageFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username)
        </div>
        <div>
            @Html.LabelFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)
        </div>
        <div>
            @Html.ValidationMessageFor(m => m.RememberMe)
            @Html.BootstrapCheckBoxFor(m => m.RememberMe)
        </div>
        <input type="submit" class="btn btn-primary" value="Log In" />
        <span>or</span>
        @Html.ActionLink("Create Account", "CreateAccount", null, new { @class = "btn" })
    </fieldset>
}